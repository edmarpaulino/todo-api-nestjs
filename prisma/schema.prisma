generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  Todo     Todo[]
}

enum TodoStatus {
  DO
  DOING
  DONE
}

model Todo {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      TodoStatus @default(DO)
  user        User       @relation(fields: [userId], references: [id])
  userId      String     @db.ObjectId
}
